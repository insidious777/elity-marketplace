{
  "name": "marketplace",
  "version": "1.0.0",
  "description": "React + Express marketplace app",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "heroku-postbuild": "npm run install-client && npm run build",
    "server": "nodemon app.js",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "keywords": [
    "express",
    "react",
    "mongodb"
  ],
  "author": "Yuriy Stolyaryk <777insidious777@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "config": "^3.3.3",
    "express": "^4.17.1",
    "express-validator": "^6.9.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.15"
  },
  "devDependencies": {
    "concurrent": "^0.3.2",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.7"
  }
}
